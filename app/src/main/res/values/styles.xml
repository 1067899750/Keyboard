<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PopWindowstyle">
        <item name="android:windowEnterAnimation">@anim/showanim</item>
        <item name="android:windowExitAnimation">@anim/dismissanim</item>
    </style>


   <!-- 键盘属性-->
    <declare-styleable name="ComputerKeyBordView">
        <attr name="keyboardBackgBackground" format="color|reference" />
        <attr name="keyBackgBackground" format="color|reference" />
        <attr name="keyClickBackgBackground" format="color|reference" />
        <attr name="deleteDrawable" format="reference" />
        <attr name="keyTextSize" format="dimension" />
        <attr name="leftPadding" format="dimension" />
        <attr name="rightPadding" format="dimension" />
        <attr name="topPadding" format="dimension" />
        <attr name="bottomPadding" format="dimension" />
        <attr name="keyboardType" format="string">
            <enum name="phone" value="0" />
            <enum name="card" value="1" />
        </attr>
    </declare-styleable>


</resources>
